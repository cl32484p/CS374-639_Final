<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/LightBlue">

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:id="@+id/leftcoulmn"
        android:background="@color/orange"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/row_seagrill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView

                    android:id="@+id/card_seagrill"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_seagrill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="seagrill"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="80dp"/>

                        <TextView
                            android:id="@+id/tv_items_seagrill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 items"
                            android:textSize="15dp"
                            android:layout_below="@id/tv_seagrill"
                            android:layout_marginLeft="80dp"
                            />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/img_seagrill"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:elevation="2dp"
                    android:src="@drawable/seagrill" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_seagrill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_launcher_foreground" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row_Salad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView

                    android:id="@+id/card_Salad"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_Salad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salad"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="80dp"/>

                        <TextView
                            android:id="@+id/tv_items_Salad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 items"
                            android:textSize="15dp"
                            android:layout_below="@id/tv_Salad"
                            android:layout_marginLeft="80dp"
                            />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/img_Salad"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:elevation="2dp"
                    android:src="@drawable/salad" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fab_Salad"
                    android:src="@drawable/ic_launcher_foreground"
                    android:backgroundTint="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row_Pasta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView

                    android:id="@+id/card_blenditsmoothie"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_blenditsmoothie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smoothie"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="80dp"/>

                        <TextView
                            android:id="@+id/tv_items_blenditsmoothie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 items"
                            android:textSize="15dp"
                            android:layout_below="@id/tv_blenditsmoothie"
                            android:layout_marginLeft="80dp"
                            />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/img_Pasta"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:elevation="2dp"
                    android:src="@drawable/blendit" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_Smoothie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_launcher_foreground" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row_Rice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView

                    android:id="@+id/card_Rice"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_Rice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza and Pasta"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="80dp"/>

                        <TextView
                            android:id="@+id/tv_items_Rice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 items"
                            android:textSize="15dp"
                            android:layout_below="@id/tv_Rice"
                            android:layout_marginLeft="80dp"
                            />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/img_Rice"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:elevation="2dp"
                    android:src="@drawable/alferno" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_alferno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_launcher_foreground" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row_Toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView

                    android:id="@+id/card_Toast"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="40dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_Toast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coffe"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="80dp"/>

                        <TextView
                            android:id="@+id/tv_items_Toast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 items"
                            android:textSize="15dp"
                            android:layout_below="@id/tv_Toast"
                            android:layout_marginLeft="80dp"
                            />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/img_cafe"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    android:elevation="2dp"
                    android:src="@drawable/cafe" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_coffe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_launcher_foreground" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/row_Burger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>