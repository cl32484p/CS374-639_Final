<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Smoothie"
    android:background="@color/LightBlue"
    >
    <RelativeLayout
        android:id="@+id/col_left"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:background="@color/orange"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Smoothie">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_Smoothie">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/salad_Smoothie"
                    android:text="OFFERS :"
                    android:textSize="40sp"
                    android:layout_margin="20dp"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Smoothie">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="330dp"
                    android:layout_height="190dp"
                    android:id="@+id/card_Smoothie"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="@color/white">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_Smoothie"
                            android:layout_marginLeft="80dp"
                            android:text="Smoothie "
                            android:textSize="30sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/info_Smoothie"
                            android:layout_marginLeft="80dp"
                            android:text="@string/Smoothie"
                            android:layout_below="@id/tv_Smoothie"
                            android:textSize="14dp"
                            android:textColor="@color/orange"/>
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rating_Smoothie"
                            android:isIndicator="false"
                            android:progressTint="@color/teal_200"
                            android:layout_marginLeft="80dp"
                            android:layout_below="@id/info_Smoothie"
                            style="@style/Widget.AppCompat.RatingBar.Indicator"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/price_Smoothie"
                            android:layout_centerHorizontal="true"
                            android:text="6 $"
                            android:layout_below="@id/rating_Smoothie"
                            android:textSize="20dp"
                            android:textColor="@color/orange"/>

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>



            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>