<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/orange"
        android:text="Welcome TO THRIFTY BITES"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileButton"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-598dp"
        android:layout_marginBottom="614dp"
        android:src="@drawable/logo" />


    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/offersButton"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-13dp"
        android:layout_marginTop="119dp"
        android:text="Current Balance: $415.0"
        android:background="@color/purple_200"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/viewTransactionHistory"
        android:layout_width="228dp"
        android:layout_height="28dp"
        android:layout_below="@+id/balanceTextView"
        android:layout_alignStart="@+id/balanceTextView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        android:background="@color/cardview_dark_background"
        android:text="Dollar PER DAY: $138.33"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button

        android:id="@+id/calorieCalculatorButton"
        android:layout_width="249dp"
        android:layout_height="61dp"
        android:layout_below="@+id/balanceTextView"
        android:layout_alignStart="@+id/balanceTextView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="241dp"
        android:background="@drawable/button_background"
        android:text="Calorie Calculator"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/editBalance"
        android:layout_width="249dp"
        android:layout_height="61dp"
        android:layout_below="@+id/balanceTextView"
        android:layout_alignStart="@+id/balanceTextView"
        android:layout_marginStart="13dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/button_background"
        android:text="EDIT BALANCE"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/offersButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/calorieCalculatorButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_background"
        android:text="Offers"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/transactionsButton"
        android:layout_width="246dp"
        android:layout_height="59dp"
        android:layout_below="@+id/editBalance"
        android:layout_alignStart="@+id/offersButton"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:text="View History"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="247dp"
        android:layout_height="63dp"
        android:layout_below="@id/transactionsButton"
        android:layout_alignStart="@+id/transactionsButton"
        android:layout_marginStart="1dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/button_background"
        android:text="Profile"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>
