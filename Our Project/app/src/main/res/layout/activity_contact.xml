<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    tools:context=".Contact">


    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="695dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        tools:ignore="ExtraText">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resources"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/editOneCard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="8dp"
            android:text="Pace One Card Balance"
            android:background="@drawable/blue_border"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/orange"
            android:fontFamily="sans-serif-condensed-medium"/>



        <TextView
            android:id="@+id/editFlex"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="8dp"
            android:text="Flex and Voluntary Dollars"
            android:background="@drawable/blue_border"
            android:textStyle="bold"
            android:autoLink="web"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/orange"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/editReadMe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="8dp"
            android:text="Read Me"
            android:background="@drawable/blue_border"
            android:textStyle="bold"
            android:autoLink="web"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/orange"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/editLinkTree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="8dp"
            android:background="@drawable/blue_border"
            android:text="Linktree"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:autoLink="web"
            android:textColor="@color/orange"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="8dp"
            android:background="@drawable/blue_border"
            android:text="Email: thriftybites@gmail.com"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/orange"
            android:fontFamily="sans-serif-condensed-medium"/>

        <TextView
            android:id="@+id/editAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="8dp"
            android:text="Based at: One Pace Plaza NY, NY 10083"
            android:textColorLink="@color/blue"
            android:background="@drawable/blue_border"
            android:textStyle="bold"
            android:autoLink="map"
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/orange"
            android:fontFamily="sans-serif-condensed-medium"/>


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

</LinearLayout>